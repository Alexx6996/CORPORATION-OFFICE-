# === AUTH ===
OIDC_ENABLED=false
OIDC_ISSUER=https://issuer.example/
OIDC_CLIENT_ID=your_client_id
OIDC_CLIENT_SECRET=your_client_secret
OIDC_AUTH_URL=https://issuer.example/authorize
OIDC_TOKEN_URL=https://issuer.example/oauth/token
OIDC_JWKS_URL=https://issuer.example/.well-known/jwks.json
OIDC_AUDIENCE=api://your-audience

# Fallback на Basic (для DEV/staging)
AUTH_ROLLBACK_TO_BASIC=true
BASICAUTH_USER=dev
BASICAUTH_PASS=devpass

# === APP ===
PYTHONUNBUFFERED=1
SERVICE_NAME=aioffice
LOG_LEVEL=info
