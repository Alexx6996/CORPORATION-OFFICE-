# --- AUTH (OIDC) ---
OIDC_ENABLED=false
OIDC_ISSUER=https://example-issuer/
OIDC_CLIENT_ID=your_client_id
OIDC_CLIENT_SECRET=your_client_secret
OIDC_AUTH_URL=https://example-issuer/oauth2/v1/authorize
OIDC_TOKEN_URL=https://example-issuer/oauth2/v1/token
OIDC_JWKS_URL=https://example-issuer/oauth2/v1/keys
# Если не используете aud — оставьте пустым
OIDC_AUDIENCE=

# Опциональные источники JWKS (bootstrap подхватит любой из них)
# OIDC_JWKS_JSON={"keys":[...]}
# OIDC_JWKS_FILE=C:\Secure\jwks.json

# --- Аварийный откат на BasicAuth (DEV/Fallback) ---
AUTH_ROLLBACK_TO_BASIC=true
BASICAUTH_USER=dev
BASICAUTH_PASS=devpass
